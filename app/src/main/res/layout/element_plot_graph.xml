<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="400sp"
    android:layout_margin="12sp" card_view:cardCornerRadius="12sp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

        <Assets.TextViewCaviarDreams
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:id="@+id/tvGraphTitle" android:gravity="center"
            android:textColor="#eeeeee" android:textSize="32sp"
            android:background="@color/custom_dialog_button_background"/>

        <com.jjoe64.graphview.GraphView
            android:layout_height="match_parent" android:layout_width="match_parent"
            android:id="@+id/gvPlotGraph" android:layout_margin="8sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>