<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="400sp"
    android:layout_margin="12sp" card_view:cardCornerRadius="12sp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="@color/custom_dialog_button_background">

            <ImageView
                android:layout_width="32sp" android:layout_height="32sp"
                android:id="@+id/ivOverflowMenu" android:background="@drawable/icon_more_vert"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                android:backgroundTint="#eeeeee" android:layout_marginRight="16sp"/>

            <Assets.TextViewCaviarDreams
                android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/tvGraphTitle" android:gravity="center"
                android:textColor="#eeeeee" android:textSize="32sp"
                android:layout_toLeftOf="@+id/ivOverflowMenu"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent"
            android:id="@+id/rlLineChartLayout" android:background="@android:color/white"
            android:padding="8sp">

            <com.github.mikephil.charting.charts.LineChart
                android:layout_height="match_parent" android:layout_width="match_parent"
                android:id="@+id/lcPlotGraph"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>