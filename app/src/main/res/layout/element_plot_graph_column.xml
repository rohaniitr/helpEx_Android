<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="68sp">

    <Assets.TextViewRobotoLight
        android:layout_width="wrap_content" android:layout_height="50sp"
        android:id="@+id/tvColumnName" android:layout_alignParentBottom="true"
        android:textSize="28sp" android:textColor="#eeeeee"
        android:background="#20c659" android:gravity="center"
        android:paddingLeft="8sp" android:paddingRight="8sp"
        android:minWidth="100sp"/>

    <ImageView
        android:layout_width="30sp" android:layout_height="30sp"
        android:background="@drawable/opaque_circle" android:src="@drawable/icon_tick_white"
        android:tint="#9bce21" android:backgroundTint="#ffffff"
        android:elevation="10sp" android:layout_marginTop="3sp"
        android:id="@+id/ivTick" android:scaleType="fitXY"
        android:layout_marginLeft="16sp"/>

    <ImageView
        android:layout_width="1sp" android:layout_height="match_parent"
        android:background="@android:color/white" android:layout_alignParentRight="true"/>

</RelativeLayout>